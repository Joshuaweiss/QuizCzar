<script type="template" id="SignUp">

  <h1>Sign Up</h1>

  <ul class="errors">
    <%% errors.each(function(error){ %>
      <li>
        <%%= error%>
      </li>
    <%% }) %>
  </ul>

  <form class="sign-up-form" action="<%= users_url %>" method="post" >

    <label>
      Name
      <input type="string" name="user[name]" value="<%%= user.name %>">
    </label>

    <label>
      Email
      <input type="string" name="user[email]" value="<%%= user.email %>">
    </label>

    <label>
      Password
      <input type="password" name="user[password]" value="<%%= user.password %>">
    </label>

    <%= auth_token_input %>

    <button>Sign Up</button>
  </form>

</script>
